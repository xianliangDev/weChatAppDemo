/* pages/template-comments/index.wxss */
.comments{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  border-bottom: 1rpx solid #e5e5e5;
}
.comments .userInfo{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}
.userInfo .icon{
  margin-left: 15rpx;
  margin-top: 15rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.userInfo .userName{
  margin-left: 15rpx;
  margin-top: 15rpx;
  max-width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  font-size: 13px;
}
.userInfo .time{
  margin-top: 15rpx;
  padding-right: 20rpx;
  flex: 1;
  max-width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  font-size: 13px;
  right: 0rpx;
  position: absolute;
}
.comments .content{
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 13px;
} 