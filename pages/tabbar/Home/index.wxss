  border-right: 1rpx solid #E5E5E5;
}
.recommendGoodsView-TwoView{
  width: 50%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #E5E5E5;
  border-top: 1rpx solid #E5E5E5;
}
.recommendGoodsView-TwoView-sub{
