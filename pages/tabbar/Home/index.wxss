/**分类*/
.catogary-view{
  width: 100%;
  height: 400rpx;
  display: flex;
  background-color: red;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #E5E5E5;
  border-top: 1rpx solid #E5E5E5;
  
  margin-bottom: 20rpx;
}

.catogary-view-image{
  width: 25%;
  height: 200rpx;
  border-right: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
  box-sizing: border-box;
}
.catogary-view-image:nth-child(4n){
  border-right: 0rpx solid #E5E5E5;
}
.catogary-view-image:nth-child(n+5){
  border-bottom: 0rpx solid #E5E5E5;
}