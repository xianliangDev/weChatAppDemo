<!--pages/tabbar/Component/index.wxml-->
<view class='index'>
  <view class='index-hd'>
    <image class='index-logo' src='../../common/resources/kindComp/logo.png'></image>
    <view class='index-desc'>以下将展示小程序官方组件能力，组件样式仅供参考，开发者可根据自身需求自定义组件样式，具体属性参数详见小程序开发文档。</view>
  </view>
  <view class='index-hd'>
    <view class='kind-list'>
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class='kind-list-item'>
          <view id='{{item.id}}' class="kind-list-item-hd {{item.open?'kind-list-item-hd-show':''}}">
            <view class='kind-list-text'>{{item.name}}</view>
            <image class='kind-list-img' src='../../common/resources/kindComp/{{item.id}}.png'></image>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>
