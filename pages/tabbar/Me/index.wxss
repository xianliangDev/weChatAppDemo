/* pages/tabbar/Me/index.wxss */
.container {
  background-color: #F8F8F8;
}
.userinfo {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  align-items: center;
  background: #e5e5e5;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #333;
}

.info_list {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    width: 90%;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}

.photoBg{
  width: 100%;
  height: 300rpx;
}

.headrPanel{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.2);
  width: 100%;
  height: 90rpx;
  position: absolute;
  top:211rpx;
  left:0;
  z-index: 9;
}
.headrPanel-content{
  width: 33.3%;
  height: 100%;
  display: flex;
  border-right: #e5e5e5 solid 0.5rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
}
.headrPanel-content-title{
  width: 100%;
  height: 60%;
  font-size: 12px;
}
.headrPanel-content-number{
  width: 100%;
  height: 40%;
   font-size: 10px;
   padding-top: 5rpx;
}
.headrPanel-content:last-child{
  border-right: #e5e5e5 solid 0rpx;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow{
  position: absolute;
  top: 18px;
  right: 15px;
  width: 16rpx;
  height: 28rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}