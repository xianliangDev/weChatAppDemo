/* pages/recommend/index.wxss */
.container{
  flex: 1;
  
}
.header{
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: #e5e5e5 solid 1rpx;
  box-sizing: border-box;
}

.shareview{
  width: 450rpx;
  height: 70rpx;
  background-color: rgb(221, 39, 39);
  border: black solid 1rpx;
  border-radius: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.shareview .icon{
  width: 30rpx;
  height: 30rpx;
}
.shareview .text{
  font-size: 15px;
  color: white;
  margin-left: 10rpx;
}

/**总收益*/
.incomeContent{
  margin-top: 20rpx;
  width: 100%;
  height: 88rpx;
  background-color: white;
  border-bottom: #e5e5e5 solid 1rpx;
  border-top: #e5e5e5 solid 1rpx;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.incomeContent .title{
  height: 88rpx;
  width: 200rpx;
  font-size: 15px;
  text-align: left;
  line-height: 88rpx;
}
.incomeContent .incomeDatacontent{
  height: 100%;
  width: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.incomeContent .incomeDatacontent .icon{
  width: 26rpx;
  height: 31rpx;
}
.incomeContent .incomeDatacontent .data{
  margin-left: 10rpx;
  font-size: 15px;
  color: rgb(221, 39, 39);
}

.guiderule{
  margin: 20rpx;
  font-size: 28rpx;
  width: 150rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: #e5e5e5 solid 1rpx;
}