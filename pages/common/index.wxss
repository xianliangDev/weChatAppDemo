/**首页的样式*/

.index-hd {
  padding: 40rpx;
  text-align: center;
}
.index-logo{
  width:86rpx;
  height: 86rpx;
}
.index-desc{
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}
.kind-list-item{
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 4rpx;
  overflow: hidden;
}

.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-text{
  flex: 1; 
  text-align: left
}
.kind-list-img{
  width: 60rpx;
  height: 60rpx;
}
.test{
  background-color: #ff0000;
  height: 80rpx;
}