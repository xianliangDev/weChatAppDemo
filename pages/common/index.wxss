/**首页的样式*/

.index-hd {
  padding: 40rpx;
  text-align: center;
}
.index-logo{
  width:86rpx;
  height: 86rpx;
}
.index-desc{
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

.navigator-box{
  opacity: 0;
  background-color: #ffffff;
  position: relative;
  font-size: 34rpx;
  line-height: 1.41176471;

  transform: translateY(-50%);
  transition: .3s;
}

.navigator-box-show{
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

/**分割线*/
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #7A7E83;
  color: #00ff00;
}

/**第一行隐藏掉横线*/
 .navigator:first-child:before {
  display: none;
} 
.navigator-text{
  flex: 1;
  text-align:left;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}


.kind-list-item{
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 4rpx;
  overflow: hidden;
}

.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
}
.kind-list-text{
  flex: 1; 
  text-align: left
}
.kind-list-img{
  width: 60rpx;
  height: 60rpx;
}
.test{
  background-color: #ff0000;
  height: 80rpx;
}